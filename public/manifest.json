{
    "manifest_version": 3,
    "name": "BuyBook",
    "version": "1.0",
    "description": "Compares what is in your cart with other e-commerce sites to find the cheapest alternatives",
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "icons": {
        "16": "buybook-logo-16.png",
        "48": "buybook-logo-48.png",
        "128": "buybook-logo-128.png"
    },
    "host_permissions": [
        "https://*/*"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "background": {
        "service_worker": "service_worker.js",
        "type": "module"
    },
    "author": "Luvo Dlulisa",
    "homepage_url": "https://buybook.co.za"
}